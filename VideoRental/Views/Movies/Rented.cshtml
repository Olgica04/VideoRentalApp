@using VideoRentalApp.Models.ViewModels
@model List<RentalViewModel>

<h2>My Rented Movies</h2>

@if (!Model.Any())
{
    <p>You have no active rentals.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Rented On</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Movie.Title</td>
                    <td>@item.RentedOn.ToString()</td>
                    <td>
                        <form asp-action="ReturnMovie" method="post">
                            <input type="hidden" name="rentalId" value="@item.Id" />
                            <input type="hidden" name="movieId" value="@item.MovieId" />
                            <button type="submit" class="btn btn-danger">Return</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
